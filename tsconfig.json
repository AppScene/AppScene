{
    "compileOnSave": false,
    "compilerOptions": {
        "verbatimModuleSyntax": false,
        "useDefineForClassFields": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "module": "esnext",
        "target": "es2020",
        "rootDir": "src",
        "pretty": true,
        "declarationMap": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "./dist/es2015",
        "declarationDir": "./dist/es2015",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "src/.internal/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/geodata/**/*",
        "src/fonts/**/*"
    ]
}